@import './components/_slick-slider'

$anchor
  color $red
  text-decoration none
  border-bottom 1px solid $red
  font-weight 400
  &:hover
    background-color $red
    color $white
  img
    display block
    margin 0 auto 20px
    width 4em

    
a
  @extends $anchor    
    



$button
  display inline-block
  position relative
  background-color $gray
  border 1px solid $gray
  color $black
  font-size 1rem
  font-family $body-font
  font-weight 100
  cursor pointer
  padding 16px 18px
  border-radius 10px
  -webkit-appearance none
  -webkit-font-smoothing antialiased
  -webkit-tap-highlight-color transparent
  transition 0.5s linear all
  &:hover
    background-color $white
    color $black
  &.disabled
    cursor default
    background-color $gray-darkest
    border-color $gray-darker
      

.button
  @extends $button      
  


.feature
  display inline-block
  width 300px
  height 250px
  margin 10px 10px
  vertical-align top
  
  +below($width-s)
    width 90%
    margin 20px auto
    
  .caption
    color $gray
    padding-top 1rem
    font-weight 100
    line-height 1.5em
    transition all 1s
    width 80%
    margin 0 auto

    span
      color $white
      font-weight 400
    
  .img
    display inline-block
    width 130px
    height 130px
    padding 30px
    border-radius 200px
    border 2px solid $gray-dark
    img
      width 100%
      height 100%
      filter invert(50%)
      transition all 1s
    
  &:hover
    .caption
      color $white
    .img
      img
        filter invert(100%)  
          




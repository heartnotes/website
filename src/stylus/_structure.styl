section
  position relative
  text-align center
  margin-bottom 80px
  
  &.download
    a.button
      font-size 1.5rem
      span
        font-weight 400
        
  &.features
    text-align center
    font-size 2rem
    
        

#logo
  font-family $header-font
  display block
  text-align center
  margin-top 100px

  span
    display inline-block
    
    &.text
      color $gray-light
      font-size 120px
      +below($width-s)
        font-size 80px
      +below($width-xs)
        font-size 50px

    &.img
      margin -20px -15px
      background transparent url("../img/logo.svg") center center no-repeat 
      background-size 100% 100%
      width 150px
      height 240px
      transition all 1s
      
      +below($width-xs)
        width 100px
        height 160px
        
      &:hover
        transform rotateY(180deg) scale(1.1) 
        


#intro
  text-align center
  font-size 3rem    
  margin 80px auto 0
  width 80%
  color $gray
  p
    margin 0



footer
  color $gray-dark
  text-align center
  font-size 1rem
  padding 40px 0 20px
  width 70%
  margin 0 auto
  .credits
    font-size 200%
    margin-bottom 2em
    line-height 1em
  .iconCredits
    color $gray-darker
    a
      @extends $anchor
      color $gray-darker
      border-color $gray-darker
      line-height 1.5em



